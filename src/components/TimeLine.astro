<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  body {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 40px 20px;
    color: #333;
  }

  .timeline-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-title {
    text-align: center;
    color: white;
    font-size: 2.5rem;
    margin-bottom: 60px;
    font-weight: 300;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .timeline {
    position: relative;
    padding: 20px 0;
  }

  /* Línea central del timeline */
  .timeline::before {
    content: "";
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: rgba(80, 255, 173, 0.8); /* Cambio aquí */
    transform: translateX(-50%);
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(80, 255, 173, 0.5);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 100px;
    width: 100%;
    min-height: 400px;
  }

  .timeline-content {
    position: relative;
    width: 45%;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    color: white;
  }

  .timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  }

  /* Alternar lados */
  .timeline-item:nth-child(odd) .timeline-content {
    margin-left: auto;
    margin-right: 55%;
  }

  .timeline-item:nth-child(even) .timeline-content {
    margin-left: 55%;
    margin-right: auto;
  }

  /* Puntos del timeline */
  .timeline-point {
    position: absolute;
    left: 50%;
    top: 30px;
    width: 20px;
    height: 20px;
    background: linear-gradient(
      45deg,
      rgba(80, 255, 173, 0.9),
      rgba(60, 235, 153, 1)
    ); /* Gradiente verde */
    border-radius: 50%;
    transform: translateX(-50%);
    border: 4px solid white;
    box-shadow: 0 0 0 4px rgba(80, 255, 173, 0.3); /* Sombra verde */
    z-index: 2;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-point {
    transform: translateX(-50%) scale(1.2);
    box-shadow: 0 0 0 8px rgba(80, 255, 173, 0.4); /* Sombra verde en hover */
  }

  /* Contenido de cada experiencia */
  .timeline-date {
    color: rgba(60, 235, 153, 1);
    font-weight: bold;
    font-size: 0.9rem;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .timeline-title-item {
    font-size: 1.4rem;
    font-weight: 600;
    color: white;
    margin-bottom: 8px;
  }

  .timeline-company {
    color: #ccc;
    font-size: 1rem;
    margin-bottom: 15px;
    font-style: italic;
  }

  .timeline-description {
    color: #eee;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* Sección de proyectos */
  .projects-section {
    position: absolute;
    top: 0;
    width: 45%;
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
  }

  .timeline-item:nth-child(odd) .projects-section {
    right: 0;
    left: 55%;
  }

  .timeline-item:nth-child(even) .projects-section {
    left: 0;
    right: 55%;
  }

  .projects-title {
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 20px;
    text-align: center;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .projects-grid {
    display: flex;
    flex-direction: column;
    gap: 15px;
    align-items: center;
  }

  .project-item {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 15px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 280px;
  }

  .project-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .project-item:hover::before {
    left: 100%;
  }

  .project-item:hover {
    transform: translateY(-3px);
    background: rgba(255, 255, 255, 0.25);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .project-item:hover .project-name {
    color: rgba(60, 235, 153, 1);
  }

  .project-item:hover .project-name .fa-images {
    color: rgba(60, 235, 153, 1);
  }

  .project-item:hover .project-tech .tech-tag {
    /* color: rgba(60, 235, 153, 1); */
    background: rgba(60, 235, 153, 0.3);
    /* color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem; */
    border: 1px solid rgba(60, 235, 153, 0.5);
  }

  .project-name {
    color: white;
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    margin-left: 0;
    padding-left: 0;
  }

  .project-name i {
    color: #4facfe;
    font-size: 1rem;
  }

  .fa-images {
    margin-left: auto;
  }

  .project-description {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.8rem;
    line-height: 1.4;
    text-align: left;
  }

  .project-tech {
    display: flex;
    gap: 6px;
    margin-top: 8px;
    flex-wrap: wrap;
  }

  .tech-tag {
    background: rgba(79, 172, 254, 0.3);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.7rem;
    border: 1px solid rgba(79, 172, 254, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .timeline::before {
      display: none;
    }

    .timeline-content {
      width: calc(100% - 80px);
      margin-left: 20px !important;
      margin-right: 0 !important;
    }

    .projects-section {
      position: static;
      width: calc(100% - 80px);
      margin-left: 20px !important;
      margin-top: 20px;
    }

    .timeline-point {
      display: none;
    }

    .timeline-title {
      font-size: 2rem;
    }

    .projects-grid {
      align-items: stretch;
    }

    .project-item {
      max-width: none;
    }
  }

  @media (max-width: 480px) {
    .timeline-content {
      padding: 20px;
      width: calc(100% - 60px);
      margin-left: 20px !important;
    }

    .projects-section {
      width: calc(100% - 60px);
      margin-left: 20px !important;
    }


  }
</style>
