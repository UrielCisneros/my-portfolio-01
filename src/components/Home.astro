---
import { Icon } from "astro-icon/components";
import ImageMy from "../assets/data.webp";
import BackCodeDescript from '../assets/una-taza-de-javascript.webp';
---

<div id="container">
  <div class="parent">
    <div transition:name="content-card-info" class="style-card color-section div1">
      <div transition:name="hero-profile" class="avatar-container">
        <img class="bg-gif-my" src={ImageMy.src} alt="" aria-hidden="true" />
      </div>
      <div class="container-content">
        <a href="/myinfo" class="icon-external-link">
          <div class="container-boxes">
            <div class="container-boxes-flex-between">
              <p></p>
              <Icon class="icon-link" name="mdi:arrow-right-thick" width="25" height="25" />
            </div>
            <div class="container-box-end">
              <p class="color-text-general-image" transition:name="hero-my-name-presentation">👋 Hola, Soy <span class="color-resalt">Uriel Cisneros Torres</span></p>
              <p class="color-text-genera-image-description">
                He desarrollado software dinámico, incluyendo <span
                  class="color-resalt">e-commerce personalizable</span
                >, apps multiplataforma y páginas interactivas con gestión de
                pagos. Recientemente trabajé en módulos para un <span
                  class="color-resalt">call center internacional bajo Scrum</span
                >, colaborando con equipos multidisciplinarios. Me enfoco en el
                trabajo en equipo, aprendizaje y productividad.
              </p>
            </div>
          </div>
        </a>
      </div>
    </div>
    <div class="style-card color-section div2">
      <img
        class="bg-gif"
        src={BackCodeDescript.src}
        alt=""
        aria-hidden="true"
      />
      <div class="container-content">
        <div class="container-boxes">
          <div class="container-boxes-flex-between">
            <p class="color-text-general-image">Algunos proyectos</p>
            <Icon class="icon-link" name="mdi:arrow-right-thick" width="25" height="25" />
          </div>
          <div class="container-box-end">
                
          </div>
        </div>
      </div>
    </div>
    <div class="style-card div5">
      <div class="tech-logos">
        <img
          transition:name="hero-icon-react"
          src="https://raw.githubusercontent.com/devicons/devicon/master/icons/react/react-original-wordmark.svg"
          alt="React JS"
          title="React JS"
        />
