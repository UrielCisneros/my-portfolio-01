<style is:global>
  #container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 10px;
    box-sizing: border-box;
  }

  .color-section {
    background: linear-gradient(
      to top,
      #000000 0%,
      rgba(72, 101, 129, 0.1) 35%
    );
  }

  .style-card {
    position: relative;
    border-radius: 10px;
    transition: transform 0.25s ease-out;
    cursor: pointer;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .style-card:hover {
    transform: scale(0.97);
  }
  .color-section-div1 {
    background: linear-gradient(to top, #000000 0%, #162238 35%);
  }

  .color-section-div1:hover {
    transform: scale(0.97);
  }
  /* Normaliza todas las tarjetas */
  .color-section,
  .color-section-div1 {
    position: relative;
    overflow: hidden; /* evita que el SVG se salga */
  }

  .container-english {
    text-align: center;
  }

  .container-english-text {
    font-size: 1rem;
    color: rgba(80, 255, 173, 0.8); /* blanco humo */
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.742); /* mejora el contraste */
    padding: 0.5rem;
    font-weight: bold;
  }

  .container-english-level {
    font-size: 3rem;
    color: rgba(80, 255, 173, 0.8); /* blanco humo */
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.742); /* mejora el contraste */
    margin-top: -0.5rem;
  }

  .bg-gif {
    position: absolute;
    inset: 0; /* top/right/bottom/left: 0 */
    width: 100%;
    height: 100%;
    object-fit: cover; /* mismo efecto que background-size: cover */
    object-position: center;
    filter: brightness(0.4);
    z-index: 0; /* detr√°s del texto */
    pointer-events: none; /* evita clics sobre la imagen */
    mask-image: linear-gradient(to top, transparent 0%, black 35%);
    -webkit-mask-image: linear-gradient(to top, transparent 0%, black 35%);
  }

  .avatar-container {
    position: absolute; /* saca el avatar del flujo normal */
    top: 50%;
    left: 50%;
    width: 300px;
    height: 300px;
    transform: translate(-51%, -80%);
    border-radius: 50%;
    overflow: hidden;
    z-index: 0; /* queda detr√°s del texto */
    pointer-events: none;
    border: 5px double rgba(80, 255, 173, 0.8); /* borde sutil */
  }

  .bg-gif-my {
    position: absolute;
    inset: 0; /* top/right/bottom/left: 0 */
    width: 100%;
    height: 100%;
    object-fit: cover; /* mismo efecto que background-size: cover */
    object-position: center;
    filter: brightness(0.6);
    z-index: 0;
    pointer-events: none; /* evita clics sobre la imagen */
    border-radius: 10px;
    mask-image: linear-gradient(to top, transparent 0%, black 10%);
    -webkit-mask-image: linear-gradient(to top, transparent 0%, black 10%);
  }

  .color-text-general-image {
    color: #f2f3f5; /* blanco humo */
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.742); /* mejora el contraste */
    padding: 0.5rem;
  }

  .color-text-genera-image-description {
    color: #bdc0c6; /* blanco humo */
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.673); /* mejora el contraste */
    padding: 0.5rem;
    font-size: 0.8rem;
    line-height: 1.6; /* o cualquier valor que prefieras, por ejemplo 1.8 */
    padding-bottom: 1.5rem;
  }

  .parent {
    width: 100%; /* ‚Üê aqu√≠ defines el ancho fijo */
    max-width: 80%;
    height: 100%;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(10, 1fr);
    gap: 10px;
    margin: 5px;
  }

  .div1 {
    grid-column: span 2 / span 2;
    grid-row: span 7 / span 7;
    /* color: white; */
  }

  .div2 {
    grid-column: span 4 / span 4;
    grid-row: span 3 / span 3;
    grid-column-start: 3;
    /* color: white; */
  }

  /* Estilos espec√≠ficos para los proyectos */
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }

  .project-item {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px;
    padding: 12px;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    border: 1px solid rgba(80, 255, 173, 0.1);
    backdrop-filter: blur(10px);
  }

  .project-item:hover {
    background: rgba(0, 0, 0, 0.5);
    border-color: rgba(80, 255, 173, 0.3);
    transform: translateY(-2px);
  }

  .project-icon {
    min-width: 35px;
    height: 35px;
    background: rgba(80, 255, 173, 0.1);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(80, 255, 173, 0.8);
  }

  .project-info {
    flex: 1;
    min-width: 0;
  }

  .project-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #f2f3f5;
    margin: 0 0 4px 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
    line-height: 1.2;
  }

  .project-tech {
    font-size: 0.7rem;
    color: #bdc0c6;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6);
    line-height: 1.1;
  }

  .div5 {
    grid-column: span 2 / span 2;
    grid-row: span 5 / span 5;
    grid-column-start: 3;
    grid-row-start: 4;
    background-color: rgba(72, 101, 129, 0.1);
  }

  .tech-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    gap: 15px; /* Espacio entre logos */
    padding: 1rem;
    height: 100%;
    box-sizing: border-box;
    overflow-y: auto;
  }

  .tech-logos img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    filter: brightness(0.9);
    transition: transform 0.3s ease;
    cursor: pointer;
    padding: 10px;
  }

  .tech-logos img:hover {
    transform: scale(1.5);
    filter: brightness(1);
  }

  .div6 {
    position: relative;
    grid-column: span 2 / span 2;
    grid-row: span 4 / span 4;
    grid-column-start: 5;
    grid-row-start: 4;
    display: flex;
